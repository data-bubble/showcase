<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="h2">

        <item name="android:textColor">@color/textColor</item>
       <item name="android:fontFamily">@font/font_1</item>
        <item name="android:textSize">@dimen/h2_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/cardview_dark_background</item>

    </style>
    <style name="h2.second">
        <item name="android:textColor">@color/colorPrimary</item>

        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">@dimen/second_h2_size</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>

    </style>
    <style name="h2.second.icons">
        <item name="android:fontFamily">@font/my_icons</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/h2_size</item>
        <item name="android:padding">1dp</item>
    </style>
    <style name="simple_text"
        >
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/font3</item>
        <item name="android:textSize">@dimen/second_h2_size</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textStyle">normal</item>

    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/dialog_background_shape</item>
        <item name="editTextColor">@color/textColor</item>
        <item name="android:buttonBarButtonStyle">@style/but</item>


    </style>

<style name="but" parent= "ThemeOverlay.AppCompat">
    <item name="android:stateListAnimator">@null</item>
    <item name="android:background">@drawable/btn_dialog_background</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:fontFamily">@font/font_1</item>
</style>






</resources>
