<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/residential_layout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:id="@+id/card_list_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_view_list"
    android:layout_margin="6dp"
    android:elevation="3dp"
    app:cardCornerRadius="6dp">

    <ImageView
        android:id="@+id/list_view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:foreground="@drawable/gradient_background_shape"

        />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_gravity="bottom"
    android:layout_marginBottom="@dimen/margin_bottom_list_text"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/textColor"
        android:fontFamily="@font/font_1"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius="0.001"
        android:textSize="@dimen/h1_size"/>
    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font_1"
        android:text="@string/demo_max_label"
        android:textColor="@color/textColor"
        android:textSize="@dimen/h1_size"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius="0.001"
        />
</LinearLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>